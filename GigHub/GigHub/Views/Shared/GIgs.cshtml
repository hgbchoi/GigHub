@model GigHub.ViewModels.GigsViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="already-attending-error hide">
    <p>You are already attending this gig!</p>
</div>

<h1>@Model.Heading</h1>
<ul class="gigs voffset4">

    @foreach (var gig in Model.UpcomingGigs)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Artist.Name
                    @if (gig.IsCanceled)
                    {
                        <span class="label label-danger">Canceled</span>
                    }
                    @if (Model.ShowActions)
                    {
                        <button data-artist-id="@gig.ArtistId" class="js-toggle-follow btn-link">Follow</button>
                    }
                </span>
                <span class="genre">
                    @gig.Genre.Name
                    @if (Model.ShowActions && !gig.IsCanceled)
                    {
                        <button data-gig-id="@gig.Id" class="btn btn-default btn-sm js-toggle-attendance">Going?</button>
                    }
                </span>

            </div>
        </li>
    }
</ul>

@section scripts{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function () {
                        $(".already-attending-error")
                            .removeClass("hide")
                            .delay(2000)
                            .queue(function () {
                                $(".already-attending-error").addClass("hide").dequeue();
                            });
                    });
            });

            $(".js-toggle-follow").click(function (e) {
                var link = $(e.target);
                $.post("/api/follows", { Followed: link.attr("data-artist-id") })
                    .done(function () {
                        link.text("Following");
                    }).fail(function () {
                        alert("failed");
                    });
            });
        });
    </script>
}